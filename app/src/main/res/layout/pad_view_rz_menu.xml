<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/llTime"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/auth_menu_time"
            android:textSize="45.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/auth_menu_time"
            android:textSize="20.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@id/tvTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择考生"
            android:textColor="@color/auth_menu_tips"
            android:textSize="35.0sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/llRztj"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <LinearLayout
            android:id="@id/ll_countTotal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tvCountTotalTip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:layout_weight="1.0"
                android:gravity="right"
                android:text="@string/statistics_total"
                android:textColor="@color/auth_menu_count"
                android:textSize="25.0sp" />

            <TextView
                android:id="@id/tvCountTotal"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:gravity="left"
                android:textColor="@color/auth_menu_count_black"
                android:textSize="25.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/ll_countVerified"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tvCountVerifiedTip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:layout_weight="1.0"
                android:gravity="right"
                android:text="@string/statistics_verified"
                android:textColor="@color/auth_menu_count"
                android:textSize="25.0sp" />

            <TextView
                android:id="@id/tvCountVerified"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:gravity="left"
                android:textColor="@color/auth_menu_count_green"
                android:textSize="25.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/ll_countUnverified"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tvCountUnverifiedTip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:layout_weight="1.0"
                android:gravity="right"
                android:text="@string/statistics_unverified"
                android:textColor="@color/auth_menu_count"
                android:textSize="25.0sp" />

            <TextView
                android:id="@id/tvCountUnverified"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:gravity="left"
                android:textColor="@color/auth_menu_count_orange"
                android:textSize="25.0sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>