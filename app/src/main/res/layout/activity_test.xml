<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/ll_footer_state_root_layout"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:background="#eaeaeb"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@id/ll_nowtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="350.0dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:background="@drawable/img_module_tab_footer_base_icon_clock" />

                <TextView
                    android:id="@id/nowtime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#ff333333"
                    android:textSize="26.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/ll_nowtime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/nowday_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#ff333333"
                    android:textSize="26.0sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1.0px"
            android:layout_height="50.0dip"
            android:layout_margin="5.0dip"
            android:background="#60000000" />

        <LinearLayout
            android:id="@id/ll_localip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="350.0dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:background="@drawable/img_module_tab_footer_base_icon_local" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginLeft="10.0dip"
                    android:gravity="center_vertical"
                    android:text="本机"
                    android:textColor="#ff333333"
                    android:textSize="24.0sp" />
            </LinearLayout>

            <TextView
                android:id="@id/localip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:maxLines="1"
                android:text=""
                android:textColor="#ff333333"
                android:textSize="26.0sp" />
        </LinearLayout>

        <View
            android:layout_width="1.0px"
            android:layout_height="50.0dip"
            android:layout_margin="5.0dip"
            android:background="#60000000" />

        <LinearLayout
            android:id="@id/ll_netip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="350.0dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@id/img_connect_state"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:background="@drawable/img_module_tab_footer_base_icon_disconnect" />

                <TextView
                    android:id="@id/tv_connect_state"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginLeft="10.0dip"
                    android:gravity="center_vertical"
                    android:text="未连接校端"
                    android:textColor="#ff333333"
                    android:textSize="24.0sp" />
            </LinearLayout>

            <TextView
                android:id="@id/netip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:maxLines="1"
                android:text=""
                android:textColor="#ff333333"
                android:textSize="26.0sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dip"
        android:background="#0000"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@id/linearlayout_sfcj"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:src="@drawable/img_home_sfcj"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="身份采集"
                android:textColor="#000000"
                android:textSize="28.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/linearlayout_cjjl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:src="@drawable/img_home_cjjl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="采集记录"
                android:textColor="#000000"
                android:textSize="28.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/linearlayout_sfrz"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:src="@drawable/img_home_sfrz" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="身份认证"
                android:textColor="#000000"
                android:textSize="28.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/linearlayout_kwdj"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:src="@drawable/img_home_rzjl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="考务登记"
                android:textColor="#000000"
                android:textSize="28.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/linearlayout_sjgl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:src="@drawable/img_home_sjgl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="数据管理"
                android:textColor="#000000"
                android:textSize="28.0sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ebebec"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@id/ll_test_xqkc"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dip">

            <ImageView
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:background="@drawable/img_module_home_page_base_home_room_kk" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="10.0dip"
                android:text="选取考场"
                android:textColor="#ff595757"
                android:textSize="@dimen/twentyFour_sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/ll_test_cqqd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dip">

            <ImageView
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:background="@drawable/img_module_home_page_base_home_reboot_kk" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="10.0dip"
                android:text="重启驱动"
                android:textColor="#ff595757"
                android:textSize="@dimen/twentyFour_sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:background="@color/color_divider_line" />

    <include layout="@layout/pad_view_test_wgversion" />
</LinearLayout>