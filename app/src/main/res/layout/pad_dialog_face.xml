<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="336.0dip"
        android:layout_height="480.0dip"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10.0dip">

        <LinearLayout
            android:id="@id/llBottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tvCancel"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/img_module_tab_auth_queryflow_face_btnbg"
                android:gravity="center"
                android:padding="10.0dip"
                android:text="重拍"
                android:textColor="@color/auth_result"
                android:textSize="40.0sp" />

            <View
                android:layout_width="5.0dip"
                android:layout_height="0.0dip"
                android:background="#00000000" />

            <TextView
                android:id="@id/tvComfirm"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/img_module_tab_auth_queryflow_face_btnbg"
                android:gravity="center"
                android:padding="10.0dip"
                android:text="确认"
                android:textColor="@color/auth_result"
                android:textSize="40.0sp" />
        </LinearLayout>

        <ImageView
            android:id="@id/ivPhoto"
            android:layout_width="280.0dip"
            android:layout_height="400.0dip"
            android:layout_above="@id/llBottom"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter" />
    </RelativeLayout>
</RelativeLayout>