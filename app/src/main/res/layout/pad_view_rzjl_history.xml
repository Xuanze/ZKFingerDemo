<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/list_item_statistic_spread_ll"
        android:layout_width="fill_parent"
        android:layout_height="59.0dip"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/color_divider_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="57.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@id/list_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:gravity="center"
                android:text="历史记录"
                android:textColor="@color/black"
                android:textSize="@dimen/twentyFour_sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0" />

            <ImageView
                android:id="@id/list_item_history_iv"
                android:layout_width="30.0dip"
                android:layout_height="18.0dip"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/twenty_dp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/color_divider_line" />
    </LinearLayout>
</LinearLayout>